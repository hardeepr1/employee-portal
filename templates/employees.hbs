<div id="employeesTemplate">
  <div id="search-options">
    <h3 style="text-align: center;margin: 10px;padding: 15px;">Search By:</h3>
    <div class="form-inline">
      <div class="form-group col-sm-4">
        <label for="fist-name" class="col-sm-4">FirstName</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="first-name" placeholder="Hardeep">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label for="last-name" class="col-sm-4">LastName</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="last-name" placeholder="Raike">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label for="email" class="col-sm-4">Email</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="email" placeholder="example@nagarro.com">
        </div>
      </div>
      <div class="form-group col-sm-12" style="margin: 10px 0px;"></div>            
      <div class="form-group col-sm-4">
        <label for="beg-date" class="col-sm-4">Begining Date</label>
        <div class="col-sm-8">
          <input type="date" class="form-control" id="beg-date">
        </div>
      </div>
      <div class="form-group col-sm-4">
        <label for="end-date" class="col-sm-4">End Date</label>
        <div class="col-sm-8">
          <input type="date" class="form-control" id="end-date">
        </div>              
      </div>
      <div class="form-group col-sm-4">
        <label for="dept" class="col-sm-4">Department</label>
        <div class="col-sm-8">
          <select id="dept" class = "form-control">
            <option value="">Unknown</option>
            {{#each .}}
            <option value="{{DepartmentId}}">{{DepartmentName}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <button type="submit" id="search-btn" style="display: block; margin: 10px auto;"class="btn btn-default">Search</button>
      </div>
    </div>
  </div>
  <div id="search-result" style="display:none;">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>FirstName</th>
              <th>LastName</th>
              <th>Email</th>
              <th>DateOfJoining</th>
              <th>Department</th>                    
            </tr>
          </thead>
          <tbody id="emp-tupples">                                                 
          </tbody>
        </table>
  </div>
</div>